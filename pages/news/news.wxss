/**news.wxss**/
/* page view */
page, view {
    font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif;
}
/* banner */
.banner image{
  width:100%;
}
/* modelDetail */
.news-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 5rpx;
  border-radius: 10%;
  float: left;
}
/* newslist */
.flex-wrp{
  display: flex;
  flex-direction:row;
  padding: 0px 0 10px 0;
}
.newsContainerWrap {
  padding-top: 100rpx;
}
.newsContainer{
    background: #F5F4F3;
    margin: 20rpx 14px;
    padding: 10px 20rpx 5px 20rpx;
    border-radius: 2%;
}
.flex-wrp image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 4%;
}
.flex-wrp .new-Photo{
  flex: 1;
}
.flex-wrp .new-title{
  flex: 4;
  text-align: left;
}
.new_title {
    font-weight: bold;
    font-size: 1.2em;
    /* padding-bottom: 20rpx;
    padding-top: 20rpx; */
}
