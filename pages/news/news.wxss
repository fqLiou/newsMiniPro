.flex-col{
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  padding-bottom: 10px;
}
.conLeft{
  flex: 2;
  display: inline-block;
}
.conRight{
  flex: 1;
  display: inline-block;
  position: relative;
}
.btn-area{
    margin-top: 15px;
}
.more{
  position: absolute;
  bottom: 2px;
  right: 10px;
  margin-top: 20px;
  font-size: 16px;
  /* text-shadow: 1px 2px 2px #585858; */
}
.sourceIcon,.pubIcon,.tagIcon{
  display: inline-block;
  padding-left: 0px;
  font-weight: 200;
  font-size: .8em;
  padding-top: 30rpx;
  color:#A25E19;
}
.sourceIcon{
  margin-right: 8px;
}
.pubIcon{
  line-height: 1.0;
}
.tagIcon{  
    color: #566CD1;
    display: block;
}
.sourceIcon text,.pubIcon text,.tagIcon text{
  margin-left: 4px;
}
.para {
    font-size: .9em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
}
.tlink {
    font-size: .7em;
    color: #0e61af;
    padding-top: 10rpx;
    width: 100%;
}

/* tips */
.flex-col-tip{
  display: flex;
  flex-direction:column;
  padding: 38rpx 30rpx;
}
.noContentIcon{
  margin-top: 50%;
  font-size: 80px;
  text-align: center;
}
.tipsText{
  text-align: center;
  font-size: 16px;
}