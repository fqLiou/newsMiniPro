/* newslist */
.flex-wrp{
  display: flex;
  flex-direction:row;
  padding: 20px 0 10px 0;
}
.card{
    background: #fff;
    margin: 20rpx 14px;
    padding: 5px 20rpx;
    border-radius: 2%;
}
.btn-area{
    margin-top: 15px;
    margin-bottom: 25rpx;
}
.more{
  font-size: 16px;
}
.flex-wrp image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 4%;
}
.flex-wrp .new-Photo{
  flex: 1;
}
.flex-wrp .new-title{
  flex: 4;
  text-align: left;
}
