/**news.wxss**/
/* modelDetail */
.news-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 5rpx;
  border-radius: 10%;
  float: left;
}
/* newslist */
.flex-wrp{
  display: flex;
  flex-direction:row;
  padding: 20px 0;
}
.card{
    background: #fff;
    margin: 20rpx 14px;
    padding: 5px 20rpx;
    border-radius: 2%;
}
.btn-area button {
    width: 400rpx;
    margin-top: 20px;
    margin-bottom: 10rpx;
}
.flex-wrp image{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 4%;
}
.flex-wrp .new-Photo{
  flex: 1;
}
.flex-wrp .new-title{
  flex: 4;
  text-align: left;
}
page, view {
    font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif
}
page {
    background: #e0e0e0;
}
.new_title {
    font-weight: bold;
    font-size: 1.2em;
    /* padding-bottom: 20rpx;
    padding-top: 20rpx; */
}
.tag {
    font-weight: 200;
    font-size: .8em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
    color: #006621;
}
.new_source {
    font-weight: 200;
    font-size: .8em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
    color:#A25E19;
}
.para {
    font-size: .9em;
    padding-bottom: 30rpx;
    padding-top: 30rpx;
}
.tlink {
    font-size: .7em;
    color: #0e61af;
    padding-top: 10rpx;
    width: 100%;
}