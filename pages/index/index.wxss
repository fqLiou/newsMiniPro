/**index.wxss**/
/* page */
page{
  background: #566CD1;
  font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif;
}
.sign {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sign-thumbnail {
  width: 288rpx;
  height: 288rpx;
  margin: 10rpx;
  margin-bottom: 120rpx;
  border-radius: 50%;
}
.sign-txt{
  color: #fff;
}
.sign-nickname {
  color: #aaa;
}

.sing-btn {
  margin-top: 180px;
  background:#fff;
  color:#566CD1;
}

page, view {
    font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif
}

/* 小圆点 */
.load {
  text-align: center;
  margin-top: 60rpx;
}
.load text {
  display: inline-block;
  width: 6px;
  height: 6px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin: 0 5px;
}
.load text.sct {
  background-color: #fff;
}